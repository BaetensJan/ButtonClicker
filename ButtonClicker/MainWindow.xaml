<Window x:Class="ButtonClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="clickMeButton" Content="Click Me!" HorizontalAlignment="Left" Margin="362.5,215.4,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="299.2,104.5,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="You clicked {num} times on the button" VerticalAlignment="Top"/>

    </Grid>
</Window>
